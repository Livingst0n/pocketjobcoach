@model PJCAdmin.Models.task

@{
    ViewBag.Title = "Create Task";
}

<h2>Create Task</h2>

<hr />
@*Html.BeginForm is analogous to <form> tag*@
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>task</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.taskCategoryID, "Task Category")
        </div>
        <div class="editor-field">
            @*This drop down should display the task category name (since we "include"d this in Index())*@
            @Html.DropDownList("taskCategoryID", "Select a task category")
            @Html.ValidationMessageFor(model => model.taskCategoryID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.taskName)
        </div>

        <div class="editor-field">
            @Html.EditorFor(model => model.taskName)
            @Html.ValidationMessageFor(model => model.taskName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.description)
        </div>

        <div class="editor-field">
            @Html.EditorFor(model => model.description)
            @Html.ValidationMessageFor(model => model.description)
        </div>
    </fieldset>
    <hr />
    <p>
        <div>
            <input type="submit" value="Create" />
            @Html.ActionLink("Cancel", "Index")
        </div>
    </p>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
