@model PJCAdmin.Models.task

@{
    ViewBag.Title = "Create Task";
}

<h2>Create Task</h2>

<script type="text/javascript">
    function AddPrompt() {
        var rowCount = $('#insertprompt tr').length;
        var index = rowCount + 1;
        $('#insertprompt').append("<tr><td><input type='hidden' name='prompts.Index' value='" +
            index + "' /><input type='text' name='prompts.typeName' /></td></tr>");
    }
</script>

@*Html.BeginForm is analogoud to <form> tag*@
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>task</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.taskCategoryID, "Task Category")
        </div>
        <div class="editor-field">
            @*This drop down should display the task category name (since we "include"d this in Index())*@
            @Html.DropDownList("taskCategoryID", "Select a task category")
            @Html.ValidationMessageFor(model => model.taskCategoryID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.taskName)
        </div>

        <div class="editor-field">
            @Html.EditorFor(model => model.taskName)
            @Html.ValidationMessageFor(model => model.taskName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.description)
        </div>

        <div class="editor-field">
            @Html.EditorFor(model => model.description)
            @Html.ValidationMessageFor(model => model.description)
        </div>
        <div class="editor-label">
            <h3>Upload a Media File</h3>
        </div>
        <div class="editor-label">
            @Html.Label("URL")
        </div>
        <div class="editor-field">
            <input type="text" name="Text" />

        </div>
        <div class="editor-label">
            @Html.Label("Type")
        </div>
    </fieldset>
    @**********************************************@

    <fieldset>
        <input type="button" value="Add Media Link" onclick="AddPrompt();" />
        @*@Html.Partial("_Prompt", new List<PJCAdmin.Models.prompttype>())*@

        <table id="insertprompt">
            <tr>
                <td>
                    Prompt Type:
                </td>
            </tr>
        </table>
    </fieldset>
   
     <p>
        <input type="submit" value="Done" />
    </p>
}

